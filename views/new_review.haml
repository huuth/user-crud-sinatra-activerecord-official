!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title New Review
    %link{:href => "data:image/x-icon;,", :rel => "shortcut icon", :type => "image/x-icon"}/
    %link{:href => "../css/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "../css/user.css", :rel => "stylesheet"}/
    %link{:href => "../css/show.css", :rel => "stylesheet"}/
  %body
    .contaner
      %h1 New Review
      %hr
      .form
        %form{:action => '/review/new', :method => 'post', :enctype => 'multipart/form-data'}
          .wrap_element
            %label Subject
            %span *
            %input{:type => 'text', :required => '', :name => 'book_review[subject]'}
          
          .wrap_element
            %label Reviewer
            %span
            %input{:type => 'text', :required => '', :value => session[:user][:last_name] +" "+session[:user][:first_name], :readonly => true}
          
          .wrap_element
            %label Content
            %span *
            %input{:type => 'text', :required => '', :name => 'book_review[content]'}

          .wrap_element
            %label Star
            %input{:type => 'number', :required => '', :min => 1, :max => 5,:name => 'book_review[star]'}

          .button
            %input{:type => 'submit', :value => 'Submit'}

    %script{:src => "js/jquery.min.js"}
    %script{:src => "js/bootstrap.min.js"}
    %script{:src => "js/user_cru.js"}
